import requests
from bs4 import BeautifulSoup


# 根据每一页url规律构造出url
def get_url(page):
    head = 'https://www1.szu.edu.cn/mailbox/list.asp?page='
    tail = '&leader=%CE%CA%CC%E2%CD%B6%CB%DF&tag='
    variable = str(page)
    url = head + variable + tail
    return url


def get_title(url):
    # 伪装成浏览器，防止封ip
    headers = {
        'User-Agent': 'Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/71.0.3578.98 '
                      'Safari/537.36'
    }
    # 进行认证，不然抓取到的不是真的页面
    cookies = {
        'ASPSESSIONIDQAQSATRD': 'PMFKOKGDAPAHEJIMALKMOMNB',
        'ASPSESSIONIDSCQRBTRC': 'MKHHDMPDIODFAKJPEHFCJPPO',
        'ASPSESSIONIDQAQRBTQC': 'HMNFKDBAJAIDGGBLNGEKFEAL',
        'ASPSESSIONIDSARRBSRD': 'CNHPGNIAFOPDGAGAIJIBHHBC',
        'ASPSESSIONIDSCQSBSRD': 'PJIDPEKAFJIKIIEJHAPANAPL',
        'ASPSESSIONIDQCSTDRRC': 'BGKLGMLAPONIHGBJIFJLIDPE',
        'ASPSESSIONIDCATACQST': 'IJGMEILCDHALEEPDCDLECDOE'
    }
    # 前面的都已经过期了，最后一个cookies是刚刚从内部网上复制下来的
    # 防止爬虫突然断掉，使其重复执行访问
    tries = 7
    while tries > 0:
        try:
            rsp = requests.get(url, headers=headers, cookies=cookies)
            break
        except Exception as e:
            tries -= 1
            print(e)
    # 防止中文乱码
    print(rsp)
    rsp.encoding = rsp.apparent_encoding
    # print(rsp.encoding)
    data = rsp.text
    # 生成soup对象进行标签筛选
    soup = BeautifulSoup(data, 'html.parser')
    soup_tag = soup.find_all('a', target="_blank")
    # print(soup)
    print(soup_tag)
    title = []
    for item in soup_tag:
        name = item.text[1::]
        # print(name)
        title.append(name)
    title.pop()
    print(title)
    return title


def main():
    title_list = []
    for page in range(1, 3):
        url = get_url(page)
        titles = get_title(url)
        # print(titles)
        title_list += titles
        # print(title_list)

    # 写入txt文件中
    # 前面的rsp.encoding并不是'urf-8'而是‘GB2312’，这里把title的格式转化为'utf-8'才不会报错
    for title in title_list:
        with open('D:/一堆东西/视觉组/爬虫/title.txt', 'a', encoding='utf-8') as f:
            f.write(title + '\n')


if __name__ == '__main__':
    main()
